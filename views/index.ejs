<!DOCTYPE html>
<html>
  <head>
    <title>Book Tracker</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
    <h1>Book Tracker</h1>
    <!-- Add Book Form -->
    <form action="/books/add" method="POST">
      <input type="text" name="name" placeholder="Book Name" required />
      <input type="text" name="author" placeholder="Author" required />
      <input type="number" name="year" placeholder="Year" required />
      <textarea name="note" placeholder="Add a note about the book" rows="4"></textarea>
      <button type="submit">Add Book</button>
    </form>

    <!-- Book List -->
    <ul>
      <% books.forEach(book => { %>
        <li>
          <strong><%= book.name %></strong> by <%= book.author %> (<%= book.year %>)
          <form action="/books/edit/<%= book.id %>" method="POST" style="display:flex; flex-wrap:wrap; gap:10px; align-items:center;">
            <input type="text" name="name" value="<%= book.name %>" required />
            <input type="text" name="author" value="<%= book.author %>" required />
            <input type="number" name="year" value="<%= book.year %>" required />
            <textarea name="note" rows="2" style="flex:1;"><%= book.note %></textarea>
            <button type="submit">Edit</button>
          </form>
          <form action="/books/delete/<%= book.id %>" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }); %>
    </ul>
  </body>
</html>